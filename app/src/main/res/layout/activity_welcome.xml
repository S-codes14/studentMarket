<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">

    TODO: add selected and deselected dots or change their colors

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/welcome_image_slider"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="285dp"
        app:iss_auto_cycle="false"
        app:iss_corner_radius="5"
        app:iss_delay="0"
        app:iss_placeholder="@drawable/feminine_welcome_instagram_post" />

    <Button
        android:id="@+id/getStarted_btn_wl"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/welcome_image_slider"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="184dp"
        android:text="Get Started" />

    <Button
        android:id="@+id/login_btn_wl"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/getStarted_btn_wl"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="110dp"
        android:backgroundTint="#00FFFFFF"
        android:outlineProvider="none"
        android:text="Login" />

    <Button
        android:id="@+id/skip_btn_wl"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/welcome_image_slider"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="292dp"
        android:layout_marginBottom="660dp"
        android:backgroundTint="#00FFFFFF"
        android:outlineProvider="none"
        android:textColor="@color/grey_font"
        android:text="Skip" />


</RelativeLayout>
