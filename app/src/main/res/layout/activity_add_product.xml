<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddProduct">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:paddingHorizontal="15dp"
        android:textSize="30sp"
        android:paddingBottom="10dp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cart_total" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image(s) : 1 image is compulsory"
        android:paddingHorizontal="15dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingHorizontal="10dp">

        <ImageButton
            android:id="@+id/addImage1_btn_ap"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_add"
            app:tint="@color/primary_teal" />

        <ImageButton
            android:id="@+id/addImage2_btn_ap"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            app:tint="@color/primary_teal"
            app:srcCompat="@drawable/icon_add"
            android:layout_marginHorizontal="10dp"/>

        <ImageButton
            android:id="@+id/addImage3_btn_ap"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            app:tint="@color/primary_teal"
            app:srcCompat="@drawable/icon_add"
            android:layout_marginHorizontal="10dp" />
    </LinearLayout>

</LinearLayout>