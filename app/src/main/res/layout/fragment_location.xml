<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textview_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="16dp"
        android:text="- Amic Deck -"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_location_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Security Presence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_location_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_location_security"
        tools:itemCount="2"
        tools:listitem="@layout/fragment_location_meta" />

    <TextView
        android:id="@+id/textview_location_crowd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Crowd Presence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_security" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_location_crowd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_location_crowd"
        tools:itemCount="2"
        tools:listitem="@layout/fragment_location_meta" />

    <TextView
        android:id="@+id/textview_location_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Bus Schedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_location_crowd" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_location_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_location_schedule"
        tools:itemCount="2"
        tools:listitem="@layout/fragment_location_meta" />

    <Button
        android:id="@+id/button_location_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:text="Choose This Spot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_location_schedule" />

    <TextView
        android:id="@+id/textview_location_list"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginVertical="10dp"
        android:text="Choose A Different Spot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_location_select" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_location_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_location_list"
        tools:itemCount="5"
        tools:listitem="@layout/fragment_location_listitem" />


</androidx.constraintlayout.widget.ConstraintLayout>